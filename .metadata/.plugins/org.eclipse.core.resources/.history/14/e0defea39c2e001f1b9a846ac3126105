package view;


import java.awt.FlowLayout;

import javax.swing.JFrame;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;

public class CadatroView extends JFrame{
	
	JMenuBar menuBar;
	JMenu entrarMenu,sairMenu;
	JMenuItem cadastraUsuarioItem,logooffItem,exitItem;
	
	CadastroPanelView cadaPanelView;
	
	public CadatroView(){
		super("MPOO treino");
		
		setSize(300, 300);
		setLocationRelativeTo(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLayout(new FlowLayout());
		
		
		menuBar = new JMenuBar();
		entrarMenu = new JMenu("Sair");
		sairMenu = new JMenu("Entar");
		
		cadastraUsuarioItem = new JMenuItem("Cadastrar");
		logooffItem = new JMenuItem("Logo Off");
		exitItem = new JMenuItem("Sair");
		
		
		
		
		cadaPanelView = new CadastroPanelView();
		
		
		
		add(cadaPanelView);
		setVisible(true);
	}
	
	

}
